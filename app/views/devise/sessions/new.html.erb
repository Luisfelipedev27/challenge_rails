<section class="vh-100" style="background-color: #508bfc;">
<div style="padding-top: 180px">
<h1 class="boas-vindas"> Bem vindo ao Sistema do municipio</h1>
  <div class="my-card-form">
    <h2 class="mb-3">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="d-flex justify-content-center" >
      <div class="row">
        <div class="col-12">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", style: "border-radius: 10px" }%>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password",style: "border-radius: 10px" } %>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="row">
        <div class="col10">
          <div>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
      </div>
    </div>
        <%= f.submit "Log in", class: "btn btn-primary mb-3", style: "border-radius: 5px" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

</div>

</section>

